@{
    ViewData["Title"] = "General Quarters Home";
}
<div class="row">
    <div class="col-2">
        <div class="row border border-dark justify-content-center p-1">
            <p>All Users</p>
            <input type="text" name="searchNames" id="searchNames" placeholder="search">
        </div>
        <div class="row border border-dark justify-content-center mt-3 p-1">
            <p>Friends</p>
        </div>
    </div>
    <div class="col-6">
        <div class="row ml-3">
            <img src="~/Content/Images/RadarScope.png" alt="RadarScope.png">
        </div>
        <div class="row mt-3 ml-3">
            <img src="~/Content/Images/FriendlyGrid.png" alt="">
        </div>

    </div>
    <div class="col-4">
        <div id="chat" class="row w-auto border border-dark align-content-end ">
            <div class="col">
                <p class="recieved d-block "> <span class="text-danger">USERNAME -</span> Message text</p>
                <p class="sent ">Message Text<span class="text-primary">- USERNAME</span></p>
            </div>
        </div>
        <div class="row">
            <input class="w-100 m-2" type="text" placeholder="Talk some trash!!">
            <button class="w-100 m-2">Send</button>
        </div>
    </div>
</div>