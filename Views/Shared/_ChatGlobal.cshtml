@{
    ViewData["Title"] = "General Quarters Home";
    string username = Context.Session.GetString("UserName");
}

<div class="col-12 bg-light border rounded shadow p-0">
    <h3 class="text-center my-2">Global Chat</h3>
    <div class="col-12">
        <input type="hidden" id="join-group" class="btn btn-link" value="Join Group" />
        <input type="hidden" id="leave-group" class="btn btn-link" value="Leave Group" />
        <textarea placeholder="Enter a message..." id="group-message-text" class="form-control mb-3"></textarea>
        <input type="hidden" value="Global" name="group-name" id="group-name">
        <input disabled type="hidden" value="Global" name="group-name" id="auto-join">
        <input disabled id="userInput" class="no-outline no-no-outline bg-white d-none" value="@username"/>
        <div class="col-12"><hr /></div>
        <input type="button" id="groupmsg" class="btn-primary form-control" value="Send to Group" />
        <div class="col-12"><hr /></div>
        <div class="col-12 form-control border overflow-auto mb-3" style="height: 200px;">
            <h6 id="messagesList"></h6>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>